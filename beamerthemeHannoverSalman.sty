%#########################################################
%1. OUTER THEME
%#########################################################
	\DeclareOptionBeamer{width}
	{
		\PassOptionsToPackage{width=#1}{beamerouterthemesidebarSalman}
	}
	
	\DeclareOptionBeamer{hideothersubsections}
	{
		\PassOptionsToPackage{hideothersubsections=#1}{beamerouterthemesidebarSalman}
	}
	
	\DeclareOptionBeamer{hideallsubsections}
	{
		\PassOptionsToPackage{hideallsubsections=#1}{beamerouterthemesidebarSalman}
	}

	\ProcessOptionsBeamer


%#########################################################
%2. REMAINING THEMES (COLOR, INNER)Y
%#########################################################

	\mode<presentation>

	%2a. Outer theme
	\useoutertheme[height=0pt,left]{sidebarSalman}

	%2b. Color theme
	\usecolortheme{seahorse} %beetle (gray and blue), crane (yellow), fly (dark gray), seagull (light gray)
	\setbeamercolor*{titlelike}{parent=structure}

	%2c. Inner theme
	\useinnertheme{circles}
	\usecolortheme{rose}						%changes inner theme color
	\setbeamertemplate{frametitle}[default][left]

	%out of 4 component themes, 1 theme is missing: (a) font, so i'll add it
	\usefonttheme{defaultSalman}

%#########################################################
%3. THEMES IN ALL MODE
%#########################################################
	
	\mode<all>